{
    "compilerOptions": {
        "experimentalDecorators": true,
        "lib": ["es5", "es2015.promise", "dom"],

        // 与 Vue 的浏览器支持保持一致
        "target": "es5",
        // 可以对 `this` 上的 data 属性进行更严格的推断
        "strict": true,
        // 如果使用 webpack 2+ 或 rollup，可以利用 tree shaking 特性：
        "module": "es2015",
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules", "dist"
    ]
}
